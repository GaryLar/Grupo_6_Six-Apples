<!DOCTYPE html>
<html lang="en">
    <%- include('../../partials/head-admin')  %>
<body class="listado-usuarios">
    <%- include('../../partials/header-admin') %> 
    <main class="container min-vh-100 pt-5">
      <h3 class="titulo">USUARIOS ACTIVOS:</h3> 
      <section class="tabla-color">
        <div class="table-responsive md">
          <table class="table table-striped table-hover">
              <thead>
              <tr>
                  <th scope="col">id</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Email</th>
                  <th scope="col">Rol</th>
              </tr>
              </thead>
              <tbody>
              <% users.forEach(user => { %>
                  <tr>
                  <th scope="row"><%- user.id %></th>
                  <td><%- user.name %></td>
                  <td><%- user.email %></td>
                  <!-- reveer aqui iba tabla rol -->
                  <form action="/admin/users/<%= user.id %>?_method=PUT" method="POST">
                    <td>
                      <select  name="rolId" id="rolId">
                        <option value="<%= user.rol.name %>"></option>
                        <option value="User" <%= user.rol.name === "User" && "selected" %>>Usuario</option>
                        <option value="Admin" <%= user.rol.name === "Admin" && "selected" %>>Administrador</option>
                      </select>
                      <button type="submit" class="btn btn-outline-secondary btn-sm disabled">Guardar rol</button>
                      </td>
                  </form>
                  </td>
                </tr>
              <% }) %>  
              </tbody>
          </table>
        </div>
    </section>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <%- include('../../partials/scripts')  %>
</body>
</html>