<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head-admin')  %>
<body class="administracion">
    <%- include('../../partials/header-admin') %> 
    <main class="container min-vh-100 pt-5">
        <h3 class="titulo">LISTADO DE CATEGOR√çAS:</h3>
        <section class="tabla-color">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Nombre</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <% categorias.forEach(category => { %>  <!-- revisar variable (seria categoria) -->
                <tr>
                <th scope="row"><%- category.id %></th>
                <td><%- category.name %></td>
                <td>
                    <a href="/admin/categorias/editar/<%- category.id %>" class="btn">
                      <i class="fa-solid fa-pen-to-square"></i>
                  </a>
                <form action="/admin/categorias/eliminar/<%- category.id %>?_method=DELETE" method="post">
                    <button class="btn" type="submit" onclick="alert('Borraste una categoria')">
                        <i class="fa-solid fa-trash-can"></i>
                      </button>
                  </form>
                </td>
              </tr>
            <% }) %>  
            </tbody>
        </table>
      </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <%- include("../../partials/scripts.ejs") %> 
</body>
</html>