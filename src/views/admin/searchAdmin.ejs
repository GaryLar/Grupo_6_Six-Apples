<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head-admin') %> 
<body class="search-admin">
    <%- include('../partials/header-admin') %> 
    <main class="admin-search container min-vh-100 pt-5 background">
        <h3 class="titulo">Tu Busqueda: <%= search %> </h3>
        <% if (resultadoBusqueda.length > 0) { %>
            <% resultadoBusqueda.forEach(product => { %>
                <section class="tabla-color">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Categoría</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Precio</th>
                                <th scope="col">En vista</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr>
                                <th scope="row"><%- product.id %></th>
                                <td><%- product.name %></td>
                                <td><%- product.categoryName %></td>
                                <td><%- product.type %></td>
                                <td><%- product.price %></td>
                                <td><%- product.view %></td>
                                <td>
                                    <a href="/admin/productos/editar/<%- product.id %>" class="btn">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <form action="/admin/productos/eliminar/<%- product.id %>?_method=DELETE" method="post">
                                    <button class="btn" type="submit" onclick="alert('Borraste un producto')">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </form>
                                </td>
                            </tr>
                            
                            </tbody>
                        </table>
                    </div>
            </section>
            <% }) %>
        <% } else { %> 
        <h2 class="producto-no-encontrado">NO TENEMOS EL PRODUCTO QUE SOLICITASTE. INTENTÁ CON OTRO</h2>
        <% } %>
        
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <%- include("../partials/scripts.ejs") %> 
</body>
</html>