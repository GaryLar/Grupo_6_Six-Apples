<!DOCTYPE html>
<html lang="en">
    <%- include('../../partials/head-admin')  %>
<body class="listado-productos">
    <%- include('../../partials/header-admin') %> 
    <main class="container min-vh-100 pt-5">  <!-- cambie -->
      <h3 class="titulo">LISTADO DE PRODUCTOS:</h3> <!-- cambiaar clase -->
      <section class="tabla-color">
        <div class="table-responsive md">
          <table class="table table-striped table-hover">
              <thead>
              <tr>
                  <th scope="col">id</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Categor√≠a</th>
                  <th scope="col">Tipo</th>
                  <th scope="col">Precio</th>
                  <th scope="col">En vista</th>
                  <th scope="col"></th>
              </tr>
              </thead>
              <tbody>
              <% productos.forEach(product => { %>
                  <tr>
                  <th scope="row"><%- product.id %></th>
                  <td><%- product.name %></td>
                  <td><%- product.categoryId %></td>
                  <td><%- product.type %></td>
                  <td><%- product.price %></td>
                  <td><%- product.view %></td>
                  <td>
                      <a href="/admin/productos/editar/<%- product.id %>" class="btn">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                  <form action="/admin/productos/eliminar/<%- product.id %>?_method=DELETE" method="post">
                      <button class="btn" type="submit" onclick="alert('Borraste un producto')">
                          <i class="fa-solid fa-trash-can"></i>
                        </button>
                    </form>
                  </td>
                </tr>
              <% }) %>  
              </tbody>
          </table>
        </div>
    </section>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <%- include('../../partials/scripts')  %>
</body>
</html>