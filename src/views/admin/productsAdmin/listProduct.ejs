<!DOCTYPE html>
<html lang="en">
    <%- include('../../partials/head-admin')  %>
<body class="listado-productos">
    <%- include('../../partials/header-admin') %> 
    <main class="container container-float min-vh-100 pt-5">  <!-- cambie -->
      <div class="down" id="top"><a href="#down"><i class="fa-solid fa-angle-down icon-down"></i></a></div>
      <h3 class="titulo">LISTADO DE PRODUCTOS:</h3> <!-- cambiaar clase -->
      <section class="tabla-color">
        <div class="table-responsive md">
          <table class="table table-striped table-hover">
              <thead>
              <tr>
                  <th scope="col">id</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Categor√≠a</th>
                  <th scope="col">Tipo</th>
                  <th scope="col">Precio</th>
                  <th scope="col">En vista</th>
                  <th scope="col"></th>
              </tr>
              </thead>
              <tbody>
              <% productos.forEach(product => { %>
                  <tr>
                  <th scope="row"><%- product.id %></th>
                  <td><%- product.name %></td>
                  <td><%- product.categoryId %></td>
                  <td><%- product.type %></td>
                  <td><%- product.price %></td>
                  <td><%- product.view %></td>
                  <td>
                      <a href="/admin/productos/editar/<%- product.id %>" class="btn">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                  <form class="elimina" action="/admin/productos/eliminar/<%- product.id %>?_method=DELETE" method="post" >
                      <button class="btn haceAlgo" onclick="alert('Borraste un producto')" type="submit" >
                          <i class="fa-solid fa-trash-can"></i>
                        </button>
                    </form>
                  </td>
                </tr>
              <% }) %>  
              </tbody>
          </table>
        </div>
        <div id="down" class="top"><a href="#top"><i class="fa-solid fa-angle-up icon-top"></i></a></div>
      </section>
      <nav aria-label="..." class="pt-1">
        <ul class="pagination pagination-sm justify-content-center"><!-- ver pagination-md -->
          <li class="page-item <%- anterior == null ? "disabled" : "" %>">
            <a class="page-link" href="<%- anterior == null ? "#" : anterior %>">Anterior</a>
          </li>
          <% for( let i = 0; i < pages; i++ ) { %>
            <li class="page-item <%- paginaActual == i ? "active" : "" %>"><a class="page-link" href="http://localhost:3006/admin/productos?page=<%= i %>&size=4"><%- i + 1 %></a></li>
          
          <% } %>
         
          <li class="page-item <%- siguiente == null ? "disabled" : "" %>">
            <a class="page-link" href="<%- siguiente == null ? "#" : siguiente %>">Siguiente</a>
          </li>
        </ul>
      </nav>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <%- include('../../partials/scripts')  %>
  <script src="../../../../javascript/alertProductDelete.js"></script>
</body>
</html>