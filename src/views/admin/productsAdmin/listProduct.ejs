<!DOCTYPE html>
<html lang="en">
    <%- include('../../partials/head-admin')  %>
<body class="administracion">
    <%- include('../../partials/header-admin') %> 
    <main class="container min-vh-100 pt-5">
      <h3 class="titulo">LISTADO DE PRODUCTOS:</h3> <!-- cambiaar clase -->
      <section class="tabla-color">
      <table class="table table-striped table-hover">
          <thead>
          <tr>
              <th scope="col">id</th>
              <th scope="col">Nombre</th>
              <th scope="col">Categor√≠a</th>
              <th scope="col">Tipo</th>
              <th scope="col">Precio</th>
              <th scope="col">Origen</th>
              <th scope="col">En vista</th>
              <th scope="col" class="btn"></th>
          </tr>
          </thead>
          <tbody>
          <% productos.forEach(product => { %>
              <tr>
              <th scope="row"><%- product.id %></th>
              <td><%- product.name %></td>
              <td><%- product.categoryName %></td>
              <td><%- product.type %></td>
              <td><%- product.price %></td>
              <td><%- product.origin %></td>
              <td><%- product.view %></td>
              <td class="btn">
                  
              </td>
              </tr>
          <% }) %>  
          </tbody>
      </table>
    </section>
  </main>
    <%- include('../../partials/footer')  %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>