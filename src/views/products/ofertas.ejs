<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

<body class="body-ofertas">
    <%- include("../partials/header.ejs") %>
    <main class="main-ofertas">
        <h3 class="titulo-ofertas">Ofertas Bolsones</h3>
        <section class="ofertas">
        <% ofertas.forEach(bolson => { %>
        <article class="producto-oferta">
            <div class="contenedor-oferta">
                <a href="/productos/ofertas/<%- bolson.id %>"><img width="100%" src="/images/<%- bolson.image[0] %>" alt="ofertaBolson"></a>
            </div>
            <article class="detalles">
                <p><%- bolson.name %> </p>
                <p class="precio"><strong>$ <%= bolson.price %></strong></p> 
            </article>
            <button class="boton-ofertas"><h4>Agregar al carrito</h4></button>
            </div>
        </article>
        <% }) %>
    </section>
    </main>
    <%- include("../partials/footer.ejs") %> 
    <%- include("../partials/scripts.ejs") %> 
</body>
</html>